@model IEnumerable<CartolaFC.Models.Time>
@{
    ViewBag.Title = "Listagem de Times";
}
<h2>
    Listagem de Times</h2>
<p>
    <a href="@Url.Action("Cadastrar", "Time")" class="voltar">Cadatrar novo time </a>
</p>
<table>
    <tr>
        <th>
            Nome
        </th>
        <th>
            Ano de Fundação
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Nome
            </td>
            <td>
                @item.AnoDeFundacao
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.TimeId })
                @Html.ActionLink("Excluir", "Excluir", new { id = item.TimeId })
                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.TimeId })
            </td>
        </tr>
    }
</table>
