@model CartolaFC.Models.Time
@{
    ViewBag.Title = "Editar";
}
<h2>
    Editar</h2>
    
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <fieldset>
        <legend>Time</legend>
        @Html.HiddenFor(model => model.TimeId)
        <div>
            @Html.LabelFor(model => model.Nome)
        </div>
        <div>
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div>
            @Html.LabelFor(model => model.AnoDeFundacao)
        </div>
        <div>
            @Html.EditorFor(model => model.AnoDeFundacao)
            @Html.ValidationMessageFor(model => model.AnoDeFundacao)
        </div>
        
        <div>
            @Html.LabelFor(model => model.Descricao)
        </div>
        <div>
            @Html.TextAreaFor(model => model.Descricao)
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>
        <p>
            <input type="submit" value="Alterar" />
        </p>
    </fieldset>
}
<a href="@Url.Action("Index", "Time")" class="voltar">Voltar</a>